root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
indent_size = 2
max_line_length = 80
# shfmt bn, ci
binary_next_line = true
switch_case_indent = true
tab_width = 2

[*.yml]
indent_size = 2

[Dockerfile]
indent_size = 4
